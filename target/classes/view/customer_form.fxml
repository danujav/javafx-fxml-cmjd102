<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.stockmanage102.controller.CustomerFormController">
   <children>
      <Label layoutX="163.0" layoutY="26.0" text="Customer Manage">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="txtId" layoutX="27.0" layoutY="106.0" onAction="#txtIdOnAction" prefHeight="30.0" prefWidth="246.0" promptText="customer id" />
      <TextField fx:id="txtName" layoutX="311.0" layoutY="106.0" prefHeight="30.0" prefWidth="246.0" promptText="customer name" />
      <TextField fx:id="txtAddress" layoutX="27.0" layoutY="185.0" prefHeight="30.0" prefWidth="246.0" promptText="customer address" />
      <TextField fx:id="txtTel" layoutX="311.0" layoutY="185.0" prefHeight="30.0" prefWidth="246.0" promptText="customer tel" />
      <Button layoutX="476.0" layoutY="241.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="30.0" prefWidth="69.0" style="-fx-background-color: #3498db;" text="Save">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="311.0" layoutY="241.0" mnemonicParsing="false" onAction="#btnClearOnAction" prefHeight="30.0" prefWidth="69.0" style="-fx-background-color: #95a5a6;" text="Clear">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="393.0" layoutY="241.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="30.0" prefWidth="69.0" style="-fx-background-color: lightgreen;" text="Update">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
